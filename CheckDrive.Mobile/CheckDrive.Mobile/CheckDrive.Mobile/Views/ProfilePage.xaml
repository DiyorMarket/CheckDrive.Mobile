<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="CheckDrive.Mobile.Views.ProfilePage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20" Spacing="20">
                <Frame Padding="0"
                       CornerRadius="100"
                       HeightRequest="200"
                       HorizontalOptions="Center"
                       IsClippedToBounds="True"
                       WidthRequest="200">
                    <Image Aspect="AspectFill" Source="{Binding ProfileImage}" />
                </Frame>

                <Label FontAttributes="Bold"
                       FontSize="24"
                       HorizontalOptions="Center"
                       Text="{Binding FullName}" />

                <Frame Padding="10"
                       BorderColor="LightGray"
                       CornerRadius="5">
                    <StackLayout Spacing="10">
                        <Label FontAttributes="Bold"
                               FontSize="18"
                               Text="Personal Information" />
                        <BoxView HeightRequest="1" Color="LightGray" />
                        <StackLayout Orientation="Horizontal">
                            <Label FontAttributes="Bold"
                                   Text="Email:"
                                   WidthRequest="100" />
                            <Label Text="{Binding Email}" />
                        </StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Label FontAttributes="Bold"
                                   Text="Phone:"
                                   WidthRequest="100" />
                            <Label Text="{Binding Phone}" />
                        </StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Label FontAttributes="Bold"
                                   Text="License:"
                                   WidthRequest="100" />
                            <Label Text="{Binding LicenseNumber}" />
                        </StackLayout>
                    </StackLayout>
                </Frame>

                <Frame Padding="10"
                       BorderColor="LightGray"
                       CornerRadius="5">
                    <StackLayout Spacing="10">
                        <Label FontAttributes="Bold"
                               FontSize="18"
                               Text="Vehicle Information" />
                        <BoxView HeightRequest="1" Color="LightGray" />
                        <StackLayout Orientation="Horizontal">
                            <Label FontAttributes="Bold"
                                   Text="Make:"
                                   WidthRequest="100" />
                            <Label Text="{Binding VehicleMake}" />
                        </StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Label FontAttributes="Bold"
                                   Text="Model:"
                                   WidthRequest="100" />
                            <Label Text="{Binding VehicleModel}" />
                        </StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Label FontAttributes="Bold"
                                   Text="Year:"
                                   WidthRequest="100" />
                            <Label Text="{Binding VehicleYear}" />
                        </StackLayout>
                    </StackLayout>
                </Frame>

                <Button BackgroundColor="#1C375C"
                        Command="{Binding EditProfileCommand}"
                        CornerRadius="5"
                        Text="Edit Profile"
                        TextColor="White" />

                <Button BackgroundColor="#FF4136"
                        Command="{Binding LogoutCommand}"
                        CornerRadius="5"
                        Text="Log Out"
                        TextColor="White" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>