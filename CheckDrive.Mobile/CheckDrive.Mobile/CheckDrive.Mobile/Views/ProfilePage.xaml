<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="CheckDrive.Mobile.Views.ProfilePage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <ScrollView>
            <Grid Padding="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackLayout Grid.Row="0" Spacing="15">
                    <Frame Padding="10"
                           CornerRadius="100"
                           HeightRequest="175"
                           HorizontalOptions="Center"
                           IsClippedToBounds="True"
                           WidthRequest="175">
                        <Image Aspect="AspectFill" Source="profile_image.png" />
                    </Frame>

                    <Label FontAttributes="Bold"
                           FontSize="24"
                           HorizontalOptions="Center"
                           Text="{Binding FullName}" />
                </StackLayout>

                <Frame Grid.Row="1"
                       Padding="10"
                       BorderColor="LightGray"
                       CornerRadius="5">
                    <StackLayout Spacing="10">
                        <Label FontAttributes="Bold"
                               FontSize="18"
                               Text="Shaxsiy ma'lumot" />
                        <BoxView HeightRequest="1" Color="LightGray" />
                        <StackLayout Orientation="Horizontal">
                            <Label FontAttributes="Bold"
                                   Text="Login:"
                                   WidthRequest="100" />
                            <Label Text="{Binding Login}" />
                        </StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Label FontAttributes="Bold"
                                   Text="Telefon raqam:"
                                   WidthRequest="100" />
                            <Label Text="{Binding Phone}" />
                        </StackLayout>
                        <StackLayout Orientation="Horizontal">
                            <Label FontAttributes="Bold"
                                   Text="Tug'ilgan yil:"
                                   WidthRequest="100" />
                            <Label Text="{Binding Birthdate}" />
                        </StackLayout>
                    </StackLayout>
                </Frame>

                <StackLayout Grid.Row="2"
                             Spacing="10"
                             VerticalOptions="EndAndExpand">
                    <Button BackgroundColor="#1C375C"
                            Command="{Binding EditProfileCommand}"
                            CornerRadius="5"
                            Text="O'zgartirish"
                            TextColor="White" />

                    <Button BackgroundColor="#FF4136"
                            Command="{Binding LogoutCommand}"
                            CornerRadius="5"
                            Text="Tizimdan chiqish"
                            TextColor="White" />
                </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>